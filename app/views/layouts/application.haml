!!! html
%html
  %head
    %title Zambia
    = stylesheet_link_tag "blueprint/screen.css", "zambia/jquery-ui-1.8.9.custom.css", "site.css"
    = stylesheet_link_tag "http://fonts.googleapis.com/css?family=Goudy+Bookletter+1911"
    = javascript_include_tag :defaults
    = csrf_meta_tag 
  %body
    #login
      -if current_user
        Logged in as 
        = current_user.email
        =link_to "Log out", log_out_path
      -else
        =link_to "Log in", log_in_path
    #main.container
      .span-4 &nbsp;
      .span-16.ui-widget-content.ui-corner-all.prepend-top
        .main-logo.prepend-1.prepend-top
          = image_tag("cnc_logo_70.png", :alt => "Code and Coffee", :class => "ui-corner-all")
          %h2 Code &amp; Coffee
        #ajaxBusy.topright
          Loading...
        -flash.each do |name, msg|
          =msg
        = yield
      .span-4.last
      .span-24.prepend-top.footer copyright &copy; 2011 Code and Coffee
    
